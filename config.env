# Charlotte Land Map Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/charlotte_land_map

# API Keys (Get these from respective services)
WHITEPAGES_API_KEY=your-whitepages-api-key
TRUEPEOPLESEARCH_API_KEY=your-truepeoplesearch-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ArcGIS Service URLs (Charlotte GIS)
VACANT_LAND_SERVICE_URL=https://gis.charlottenc.gov/arcgis/rest/services/PLN/VacantLand/MapServer
PARCEL_LOOKUP_SERVICE_URL=https://gis.charlottenc.gov/arcgis/rest/services/CLT_Ex/CLTEx_MoreInfo/MapServer
ZONING_SERVICE_URL=https://gis.charlottenc.gov/arcgis/rest/services/PLN/Zoning/MapServer

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=charlotte_land_map.log

# Development Settings
DEBUG=True
RELOAD=True

